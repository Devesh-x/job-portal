# Server Configuration (Render will set PORT automatically)
PORT=8000

# Database Configuration (Use MongoDB Atlas for production)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/job-portal?retryWrites=true&w=majority

# JWT Configuration (Generate a strong secret for production)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Cloudinary Configuration (Get from Cloudinary dashboard)
CLOUD_NAME=your-cloudinary-cloud-name
API_KEY=your-cloudinary-api-key
API_SECRET=your-cloudinary-api-secret

# Cookie Configuration (Generate a strong secret for production)
COOKIE_SECRET=your-super-secret-cookie-key-change-this-in-production

# CORS Configuration (Update with your Vercel domain - localhost is automatically included)
FRONTEND_URL=https://your-app-name.vercel.app 